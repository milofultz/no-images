{
  "manifest_version": 2,
  "name": "No Images",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],

  "permissions": [
    "activeTab"
  ],
  
  "browser_action": {
    "default_icon": "noimages.png"
  },
  
  "background": {
   "scripts": ["background.js"]
  }
}

